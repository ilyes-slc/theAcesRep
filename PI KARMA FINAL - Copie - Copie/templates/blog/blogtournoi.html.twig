{% extends 'test/baseFront.html.twig' %}

{% block content %}

    <style>
        @keyframes animatedimg {
            0% {
                transform: scale(1) translateY(0);
                transform-origin: 50% 16%;
            }
            100% {
                transform: scale(1.25) translateY(-15px);
                transform-origin: top;
            }
        }
        .img {
            animation: animatedimg 5s ease-out both;
        }


        .img        {
            cursor: url("https://cur.cursors-4u.net/games/gam-13/gam1229.png"), auto;
            display: flex;
            justify-content: flex-start;
            align-items: stretch;

            display: flex;
            justify-content: center;
            align-items: center;
            flex-grow: 1;
            box-sizing: border-box;
            padding: 10px 2px;
            text-align: center;
        &:nth-child(odd) {
             background: #eee;
         }
        &:hover {
             opacity: 0.25
         }
        }
    </style>
    <section class="blog_area">
        <div class="container">
            <div class="row">
                {% for a in articletournoi %}

                        <div class="col-lg-8">
                            <div class="blog_left_sidebar">
                                <article class="row blog_item">
                                    <div class="col-md-3">
                                        <div class="blog_info text-right">
                                            <div class="post_tag">

                                            </div>
                                            <ul style="color:floralwhite" class="blog_meta list">

                                            </ul>
                                        </div>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="blog_post">

                                            <img  class="img" src={{asset('uploads/images/'~a.imagearticle)}}>
                                            <div class="blog_details">
                                                <a href="single-blog.html"><h2 style="color:white">{{ a.titre|upper}}</h2></a>
                                                <p>{{ a.contenu }}</p>
                                                <p>{{ a.datecreation }}</p>

                                                <a href="/comment/new1/{{a.id}}" class="blog_btn">View More</a>
                                            </div>
                                        </div>
                                    </div>

                                </article>
                            </div>


                        </div>

                {% endfor%}
            </div>


    </section>


{%  endblock %}
{%  block js %}
    <!-- Jquery -->
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <!-- bootstrap -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.0/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <!-- carousel -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.js"></script>
{%  endblock %}