{% include 'amal/baseBack.html.twig'%}

{% block content1 %}

<div class="row" style="margin-left:20%">
<h1>Les tournois </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>Description</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tournoi in tournois %}
            <tr>
                <td>{{ tournoi.id }}</td>
                <td>{{ tournoi.name }}</td>
                <td>{{ tournoi.dateDebut ? tournoi.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ tournoi.dateFin ? tournoi.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ tournoi.description }}</td>
                <td>{{ tournoi.prix }}</td>
                <td>
                    <a href="{{ path('tournoi_show', {'id': tournoi.id}) }}">show</a>
                    <a href="{{ path('tournoi_edit', {'id': tournoi.id}) }}">edit</a>
                </td>
                <td>
                    <a href="{{ path('tournoi_sponsors', {'id': tournoi.id}) }}">get Sponsors</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tournoi_new') }}">Create new</a>
    </div>
{% endblock %}
