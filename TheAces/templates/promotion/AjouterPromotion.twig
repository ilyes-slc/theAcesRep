

{% extends 'baseBack.html.twig' %}

{% block title %}Ajouter Promotion{% endblock %}

{% block body %}

    {{ form_start(Promotion,{'attr': {'novalidate': 'novalidate'}} ) }}
    <div style="margin-left: 20%" class="row">
        <div class="col-lg-8 col-md-8 col-sm-8">
            <fieldset >
                <h4>Prouit</h4>
                {{ form_errors(Promotion.idprod,{'attr': {'class':'text-danger'}} ) }}
                {{ form_widget(Promotion.idprod,{'attr': {'class': 'form-control' , 'placeholder' : 'idprod'}}) }}
            </fieldset>
        </div>
        <div class="col-lg-8 col-md-8 col-sm-8">
            <fieldset >
                <h4>dateFin</h4>
                {{ form_errors(Promotion.dateFin,{'attr': {'class':'text-danger'}} ) }}
                {{ form_widget(Promotion.dateFin,{'attr': {'class': 'form-control' , 'placeholder' : 'dateFin'}}) }}
            </fieldset>
        </div>
        <div class="col-lg-8 col-md-8 col-sm-8">
            <fieldset >
                <h4>pourcentage</h4>
                {{ form_errors(Promotion.pourcentage,{'attr': {'class':'text-danger'}} ) }}
                {{ form_widget(Promotion.pourcentage,{'attr': {'class': 'form-control' , 'placeholder' : 'pourcentage'}}) }}
            </fieldset>
        </div>

        <div class="col-lg-12">
            <fieldset>
                <button class="btn btn-success" type="submit" id="form-submit" class="filled-button">{{ button_label|default('Ajouter') }}</button>
            </fieldset>
        </div>
    </div>
    {{ form_end(Promotion) }}

{% endblock %}

